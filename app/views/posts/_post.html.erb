<div id="<%= dom_id post %>">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%= post.display_image %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.content %></p>
      <p><%= link_to "Show post", post %></p>
      <p class="card-text" style="text-align: right"><%= post.created_at.strftime('%m/%d/%Y') %></p>
    </div>
  </div>
</div>
